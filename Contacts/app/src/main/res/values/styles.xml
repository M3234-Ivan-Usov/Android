<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="back" parent="Theme.AppCompat">
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="header" parent="back">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#090909</item>
    </style>
    <style name="name" parent="Theme.AppCompat">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#27408B</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="phone" parent="Theme.AppCompat">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#27408B</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="card" parent="Theme.AppCompat">
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">7dp</item>
    </style>
    <style name="fail" parent="Theme.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#D1DDFE</item>
        <item name="android:background">#0001D9</item>
        <item name="android:padding">20dp</item>
</style>
    <style name="sms" parent="Theme.AppCompat">

    </style>

</resources>